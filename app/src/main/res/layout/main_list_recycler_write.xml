<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/writing_window_image"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/image_x"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/writing_corrent_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="글 종결시 나옴"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/write_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/del" />

        <TextView
            android:id="@+id/writing_breedsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:text="견종 :"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/writing_dog_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_breedsTxt"
            android:gravity="center"
            android:text="진돗개"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/writing_genderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_dog_kind"
            android:gravity="center"
            android:text="성별 :"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/writing_dog_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_genderTxt"
            android:gravity="center"
            android:text="여아"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/writing_localTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_dog_gender"
            android:gravity="center"
            android:text="지역 :"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/writing_dog_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_localTxt"
            android:gravity="center"
            android:text="대전"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/writing_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_dog_local"
            android:src="@drawable/bookmark_image" />


        <TextView
            android:id="@+id/writing_num"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_image"
            android:gravity="center"
            android:text="10"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/writing_recomment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_num"
            android:src="@drawable/recomment_imgae" />

        <TextView
            android:id="@+id/writing_dog_recomment"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/writing_recomment_image"
            android:gravity="center"
            android:text="10"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>

