<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/individual_bookmark_image"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_x" />

        <TextView
            android:id="@+id/item_corrent_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="글 종결시 나옴"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/breedsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:text="견종 :"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bookmark_dog_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/breedsTxt"
                android:gravity="center"
                android:text="진돗개"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/genderTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/bookmark_dog_kind"
                android:gravity="center"
                android:text="성별 :"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bookmark_dog_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/genderTxt"
                android:gravity="center"
                android:text="여아"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/localTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/bookmark_dog_gender"
                android:gravity="center"
                android:text="지역 :"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bookmark_dog_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/localTxt"
                android:gravity="center"
                android:text="대전"
                android:textColor="#ffffff"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/item_bookmark_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/bookmark_dog_local"
                android:src="@drawable/bookmark_image" />


            <TextView
                android:id="@+id/bookmark_dog_num"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/item_bookmark_image"
                android:gravity="center"
                android:text="10"
                android:textColor="#ffffff"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/item_recomment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/bookmark_dog_num"
                android:src="@drawable/recomment_imgae" />

            <TextView
                android:id="@+id/bookmark_dog_recomment"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@+id/item_recomment_image"
                android:gravity="center"
                android:text="10"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


