<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/environmenttoolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ff9933"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginLeft="16dp"
                android:text="환경설정"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/environment_backey"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/btnx"
                android:background="#ff9933"
                android:layout_marginRight="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="푸시알림"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#333333" />
        <ToggleButton
            android:text=""
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggleButton1"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/enviromentLine"
            android:layout_alignParentBottom="true"
            android:layout_width="398dp"
            android:layout_height="1dp"
            android:background="@drawable/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noticeLayout"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#333333" />
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="398dp"
            android:layout_height="1dp"
            android:background="@drawable/line"/>

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="398dp"
            android:layout_height="1dp"
            android:background="@drawable/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/enviromentLayout1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="1등"
            android:layout_marginLeft="19dp"
            android:textSize="16sp"
            android:layout_centerVertical="true" />
        <ToggleButton
            android:text=""
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggleButton2"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="39dp"
            android:paddingBottom="39dp" />
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="398dp"
            android:layout_height="1dp"
            android:background="@drawable/line"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/enviromentLayout2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="2등"
            android:layout_marginLeft="19dp"
            android:textSize="16sp"
            android:layout_centerVertical="true" />
        <ToggleButton
            android:text=""
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggleButton3"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="39dp"
            android:paddingBottom="39dp" />
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="398dp"
            android:layout_height="1dp"
            android:background="@drawable/line"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/enviromentLayout3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="3등"
            android:layout_marginLeft="19dp"
            android:textSize="16sp"
            android:layout_centerVertical="true" />
        <ToggleButton
            android:text=""
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggleButton4"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="39dp"
            android:paddingBottom="39dp" />
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="398dp"
            android:layout_height="1dp"
            android:background="@drawable/line"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/enviromentLayout4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="4등"
            android:layout_marginLeft="19dp"
            android:textSize="16sp"
            android:layout_centerVertical="true" />
        <ToggleButton
            android:text=""
            android:textOn=""
            android:textOff=""
            android:id="@+id/toggleButton5"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="39dp"
            android:paddingBottom="39dp" />
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="398dp"
            android:layout_height="1dp"
            android:background="@drawable/line"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="버전.1.1"
            android:textSize="18sp"
            android:layout_marginBottom="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

</LinearLayout>