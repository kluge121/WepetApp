<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wepet.projectbase"
    >

    <application
        android:name=".GetContext"
        android:allowBackup="true"
        android:icon="@mipmap/lucher_icon_144"
        android:label="WePet"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.JoinActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.EditTabActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.Main"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.DetailPage"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.EnvironmentSetting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.IndividualProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Match"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MatchResult"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MypageMyBookmark"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.MypageMyChat"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.MypageMyComment"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.MyProfileModification"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.SearchAdopt"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SearchMatch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SearchMissing"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SearchProtect"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MyWritingActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.DialogActivity"></activity>

        <activity
            android:name=".activity.WriteTabActivity"
            android:screenOrientation="portrait"></activity>

        <meta-data
            android:name="wepet.projectbase.TAcademyGlideModule"
            android:value="GlideModule" />

        <service android:name=".activity.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".activity.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>